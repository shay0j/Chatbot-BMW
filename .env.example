# ============================================
#  API KEYS & SECURITY
# ============================================

# Cohere LLM API
COHERE_API_KEY=

# Firecrawl API
FIRECRAWL_API_KEY=

# HuggingFace (opcjonalnie)
HUGGINGFACE_TOKEN=

# ============================================
#  WEB SCRAPING & CRAWLING
# ============================================

# Strony startowe do crawl
SOURCES=https://www.bmw.pl,https://www.bmw-zkmotors.pl/,https://www.zkmotors.pl/,https://www.mini.com.pl/

# Op贸藕nienie midzy requestami (sekundy)
REQUEST_DELAY=1

# Maksymalna gboko crawl
MAX_DEPTH=3

# Maksymalna liczba stron do crawl
MAX_PAGES=1000

# User-Agent dla crawlera
USER_AGENT=Mozilla/5.0 (compatible; BMW-Assistant-Bot/1.0; +https://github.com/your-repo)

# Timeout dla request贸w (sekundy)
REQUEST_TIMEOUT=30

# ============================================
#  PATHS & DIRECTORIES
# ============================================

# Folder g贸wny na dane
OUTPUT_DIR=./data

# Plik wynikowy crawl wszystkich stron
FIRECRAWL_OUTPUT=./data/firecrawl_all.json

# Plik z nieudanymi URL-ami
FAILED_URLS=./data/failed_urls.json

# Folder na surowe strony
RAW_CRAWL_DIR=./data/raw_pages

# Folder na modele ML
MODELS_DIR=./data/models

# Folder na embeddings
EMBEDDINGS_DIR=./data/embeddings

# Folder na cache
CACHE_DIR=./data/cache

# Folder na logi
LOG_DIR=./logs

# Folder tymczasowy
TEMP_DIR=./tmp

# ============================================
#  LLM & AI CONFIGURATION
# ============================================

# Model Cohere do chat
COHERE_CHAT_MODEL=command-r

# Model Cohere do embeddings
COHERE_EMBED_MODEL=embed-multilingual-v3.0

# Temperatura dla generacji (0.0-1.0)
LLM_TEMPERATURE=0.7

# Maksymalna liczba token贸w w odpowiedzi
MAX_TOKENS=2000

# ============================================
#  RAG & VECTOR STORE
# ============================================

# cie偶ka do bazy ChromaDB
CHROMA_DB_PATH=./data/chroma_db

# Nazwa kolekcji w ChromaDB
CHROMA_COLLECTION_NAME=bmw_knowledge_base

# Liczba dokument贸w do pobrania z RAG
TOP_K_DOCUMENTS=5

# Minimalny score podobiestwa
SIMILARITY_THRESHOLD=0.7

# Rozmiar chunka do embeddings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ============================================
#  FASTAPI APPLICATION
# ============================================

# rodowisko (development/production)
APP_ENV=development

# Host dla API
API_HOST=0.0.0.0

# Port dla API
API_PORT=8000

# Debug mode
DEBUG=true

# Auto-reload w development
RELOAD=true

# Sekretny klucz aplikacji
SECRET_KEY=change-this-to-secure-random-key-in-production

# JWT Secret
JWT_SECRET_KEY=another-secure-key-for-jwt-tokens

# Czas wa偶noci tokena (minuty)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS origins (rozdzielone przecinkami)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
#  DATABASE & CACHE
# ============================================

# Redis URL
REDIS_URL=redis://localhost:6379/0

# Redis cache timeout (sekundy)
REDIS_CACHE_TTL=3600

# SQLite database (domylnie)
DATABASE_URL=sqlite:///./data/bmw_assistant.db

# PostgreSQL (jeli u偶ywane)
# DATABASE_URL=postgresql://user:password@localhost/bmw_assistant

# ============================================
#  MONITORING & LOGGING
# ============================================

# Poziom logowania (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Sentry DSN (opcjonalnie)
SENTRY_DSN=

# Prometheus metrics port
METRICS_PORT=9090

# Enable/disable metrics collection
ENABLE_METRICS=true

# ============================================
#  PERFORMANCE & RATE LIMITING
# ============================================

# Maksymalna liczba request贸w na minut
RATE_LIMIT_PER_MINUTE=60

# Timeout dla request贸w API (sekundy)
API_TIMEOUT=60

# Maksymalna liczba worker贸w
MAX_WORKERS=4

# Batch size dla embeddings
EMBEDDING_BATCH_SIZE=32

# ============================================
#  APPLICATION SPECIFIC
# ============================================

# Nazwa aplikacji
APP_NAME=BMW_Assistant

# Wersja aplikacji
APP_VERSION=1.0.0

# Domylny jzyk
DEFAULT_LANGUAGE=pl

# Wspierane jzyki (rozdzielone przecinkami)
SUPPORTED_LANGUAGES=pl,en,de

# Maksymalna dugo historii konwersacji
MAX_CONVERSATION_HISTORY=20

# Enable/disable streaming odpowiedzi
ENABLE_STREAMING=true

# ============================================
# И TESTING & DEVELOPMENT
# ============================================

# Tryb testowy
TEST_MODE=false

# Mockowanie API (dla test贸w)
MOCK_EXTERNAL_APIS=false

# Test database URL
TEST_DATABASE_URL=sqlite:///./data/test.db

# ============================================
#  SECURITY (production only)
# ============================================

# Wczanie HTTPS w produkcji
ENABLE_HTTPS=false

# SSL certificate paths (jeli HTTPS)
SSL_CERT_PATH=
SSL_KEY_PATH=

# Allowed admin IPs (rozdzielone przecinkami)
ADMIN_IPS=127.0.0.1

# Enable/disable admin panel
ENABLE_ADMIN_PANEL=false